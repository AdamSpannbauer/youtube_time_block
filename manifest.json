{
  "manifest_version": 2,
  "name": "YouTube Time Blocker",
  "description": "Block video times & progress bars on YouTube to avoid spoilers caused by video duration.",
  "version": "0.1",
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_start",
    "matches": [
      "*://*.youtube.com/*"
    ],
    "js": ["content.js"]
  }],
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
